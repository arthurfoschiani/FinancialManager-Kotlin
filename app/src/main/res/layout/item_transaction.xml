<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECEITA"
            android:textColor="#FF9800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewAmount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewType"
            app:layout_constraintEnd_toStartOf="@+id/textViewAmount"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="8dp"
            android:text="Titulo da Transação"
            android:textStyle="bold"
            android:textColor="#9F9F9F" />

        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="R$ 100,00" />

</androidx.constraintlayout.widget.ConstraintLayout>